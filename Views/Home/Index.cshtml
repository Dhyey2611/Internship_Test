@model List<Internship_Test.ViewModel.MeniItemsViewModel>

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>@ViewData["Title"] - Lomo</title>

    <!-- Bootstrap & Icons -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet" />
    <link href="~/css/Index.css" rel="stylesheet" />
</head>

<body>
    <!-- Logo -->
    <div class="text-center mt-3">
        <img src="~/images/Lamo_Icon.png" alt="Lomo Logo" style="height: 100px;" />
    </div>

    <!-- App Name & Tagline -->
    <h1 class="text-center fw-bold" style="font-family: cursive; font-size: 40px;">Lomo</h1>
    <p class="text-center fst-italic" style="font-size: 18px;">Hungry? Don't worry, we have the solution</p>

    <!-- Rectangle Box -->
    <div class="container border rounded p-4 shadow-sm" style="background-color: #f9f9f9;">
        <!-- Top Bar: Search + User Icon -->
        <form method="get" class="d-flex justify-content-between align-items-center mb-3">
            <input type="text" name="search" class="form-control w-50" placeholder="Search items..." value="@Context.Request.Query["search"]" />
            <input type="submit" value="Search" class="btn btn-primary ms-2" />
            <span class="btn btn-outline-dark ms-2" onclick="openUserPopup()">👤</span>
        </form>

        <!-- Menu Items Table -->
        <table class="table table-bordered shadow-sm rounded menuTable">
            <thead class="text-white" style="background-color: #4a69bd;">
                <tr class="text-center">
                    <th>Item Name</th>
                    <th>Price (₹)</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody class="text-center align-middle">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.ItemName</td>
                        <td>@item.Price</td>
                        <td>
                            <button class="btn btn-sm btn-outline-success me-1" title="Edit">
                                <i class="bi bi-pencil-square"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" title="Delete">
                                <i class="bi bi-trash-fill"></i>
                            </button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

<input type="hidden" id="hiddenUserId" value="@ViewBag.UserId" />
<div class="modal fade" id="userInfoModal" tabindex="-1" aria-labelledby="userInfoModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content p-3">
            <div class="modal-header bg-primary text-white">
                <h5 class="modal-title" id="userInfoModalLabel">User Information</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p><strong>Name:</strong> <span id="modalName"></span></p>
                <p><strong>Favourite Item:</strong> <span id="modalFavourite"></span></p>
                <p><strong>Previous Order:</strong> <span id="modalPrevious"></span></p>
                <p><strong>Address:</strong> <span id="modalAddress"></span></p>
                <p><strong>Rewards:</strong> ₹<span id="modalReward"></span></p>
                <p><strong>Refund:</strong> ₹<span id="modalRefund"></span></p>
                <p><strong>Wallet Cash:</strong> ₹<span id="modalWallet"></span></p>
                <p><strong>Benefits:</strong> <span id="modalBenefit"></span></p>
                <p><strong>Update Version:</strong> <span id="modalUpdate"></span></p>
            </div>
        </div>
    </div>
</div>
</body>
</html>
<script src="~/css/Index.css"></script>


