@model List<Internship_Test.Models.Account>

@{
    ViewData["Title"] = "Students";
}

<h2>Students</h2>

<button class="btn btn-primary mb-2" data-bs-toggle="modal" data-bs-target="#createModal">+ Add Student</button>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Age</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
    @if(Model != null && Model.Any())
    {
     @foreach (var a in Model)
     {
        <tr>
            <td>@a.UserName</td>
            <td>@a.PhoneNo</td>
            <td>
                <button class="btn btn-sm btn-warning" data-bs-toggle="modal" data-bs-target="#editModal" data-id="@a.UserId">✏️</button>
                <button class="btn btn-sm btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal" data-id="@a.UserId">❌</button>
            </td>
        </tr>

        <!-- Edit Modal -->
        <div class="modal fade" id="editModal" tabindex="-1" aria-labelledby="editModalLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <form asp-action="UpdateStudent" method="post" asp-asp-controller="Student">
                        <div class="modal-header">
                            <h5 class="modal-title">Edit Student</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                        </div>
                        <div class="modal-body">
                            <input type="hidden" name="EditStudentId" id="EditStudentId" />
                            <div class="mb-3">
                                <label>Name</label>
                                <input type="text" name="EditStudentName" id="EditStudentName" class="form-control" />
                            </div>
                            <div class="mb-3">
                                <label>Age</label>
                                <input type="number" name="EditStudentAge" id="EditStudentAge" class="form-control" />
                            </div>
                        </div>
                        <div class="modal-footer">
                            <button type="submit" class="btn btn-primary">Save</button>
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    }
    }
    </tbody>
</table>

<!-- Create Modal -->
<div class="modal fade" id="createModal" tabindex="-1" aria-labelledby="createModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <form asp-action="CreateStudent" method="post" asp-controller="Student">
                <div class="modal-header">
                    <input type="hidden" id="DeleteStudentId" name="studentId">
                    <h5 class="modal-title">Add User</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div class="mb-3">
                        <label>Name</label>
                        <input type="text" name="Name" class="form-control" />
                    </div>
                    <div class="mb-3">
                        <label>Age</label>
                        <input type="number" name="Age" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="submit" class="btn btn-success">Create</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                </div>
            </form>
        </div>
    </div>
</div>
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-header">
            <h5 class="modal-title">Delete Confirmation</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
        </div>
            <form method="post" asp-action="DeleteStudent" asp-controller="Student">
                <div class="modal-body">
                    <input type="hidden" id="StudentId" name="studentId" />
                    <div class="my-3">
                        <i class="fas fa-exclamation-triangle fa-2x text-warning"></i>
                        <p class="mt-2">Are you sure you want to delete this User?</p>
                    </div>
                </div>
                <div class="modal-footer justify-content-center">
                    <button type="submit" class="btn btn-danger">YES</button>
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">NO</button>
                </div>
            </form>
    </div>
</div>